<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Client 1 projet 3 en SR03</display-name>
  <welcome-file-list>
    <welcome-file>add_ad</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>AddAd</servlet-name>
    <servlet-class>servlets.AddAd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddAd</servlet-name>
    <url-pattern>/add_ad</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DropAd</servlet-name>
    <servlet-class>servlets.DropAd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DropAd</servlet-name>
    <url-pattern>/drop_ad</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModifyAd</servlet-name>
    <servlet-class>servlets.ModifyAd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyAd</servlet-name>
    <url-pattern>/modify_ad</url-pattern>
  </servlet-mapping>
</web-app>